{
  "*.ts": [
    "eslint --fix",
    "prettier --write",
    "eslint --rule 'simple-import-sort/imports: error' --rule 'simple-import-sort/exports: error' --fix"
  ],
  "*.tsx": [
    "eslint --fix",
    "prettier --write",
    "eslint --rule 'simple-import-sort/imports: error' --rule 'simple-import-sort/exports: error' --fix"
  ],
  "*.js, *.jsx": ["eslint --fix", "prettier --write"],
  "!(package-lock)*.{json,yaml,yml}": ["prettier --write"],
  "*.md": ["prettier --write"]
}
