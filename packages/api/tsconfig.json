{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "strict": false,
    "lib": ["ES2020"],
    "allowJs": true,
    "isolatedModules": true,
    "composite": true,
    "declaration": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "test/**/*.ts",
    "jest.config.ts"
  ],
  "exclude": [
    "dist/**/*",
    "node_modules/**/*"
  ]
}