{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "esnext",
    "target": "es6",
    "lib": ["dom", "es6", "dom.iterable"],
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"]
}
